<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akdevelopers.kidslearning"
    android:installLocation="preferExternal">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activityAlphabets.abcActivity"
            android:parentActivityName="com.akdevelopers.kidslearning.MainMenu"
            android:screenOrientation="sensorLandscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.akdevelopers.kidslearning.MainMenu" />
        </activity>

        <activity
            android:name="com.akdevelopers.kidslearning.MainMenu"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activityAlphabets.EasterEgg"
            android:screenOrientation="sensorLandscape" />

        <activity
            android:name="com.akdevelopers.kidslearning.Credits"
            android:hardwareAccelerated="false"
            android:screenOrientation="sensorLandscape" />

    </application>

</manifest>